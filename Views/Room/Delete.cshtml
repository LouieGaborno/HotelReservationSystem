@model HotelReservationSystem.Models.Room

<h2>Delete Room</h2>
<p>Are you sure you want to delete this room?</p>

<dl class="row">
    <dt class="col-sm-2">Room Number</dt>
    <dd class="col-sm-10">@Model.RoomNumber</dd>

    <dt class="col-sm-2">Room Type</dt>
    <dd class="col-sm-10">@Model.RoomType</dd>

    <dt class="col-sm-2">Price Per Night</dt>
    <dd class="col-sm-10">@Model.PricePerNight.ToString("C")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@(Model.IsOccupied ? "Occupied" : "Available")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
