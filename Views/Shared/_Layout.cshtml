<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Reservation System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" />
</head>
<body style="font-family: Arial, sans-serif; background-color: #f4f7fb; margin: 0; padding: 0;">

    @{
        // Determine the current controller and action names
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <!-- Show Navbar for All Pages Except Login -->
    @if (currentAction != "Index")
    {
        <nav style="background-color: #1f2937; padding: 16px;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <a href="@Url.Action("Index", "Home")" style="color: white; font-size: 24px; font-weight: bold; text-decoration: none;">Mystwood Hotel</a>
                <button style="background-color: transparent; border: none; color: white; font-size: 24px; cursor: pointer;" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span style="font-size: 30px;">&#9776;</span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul style="list-style: none; display: flex; gap: 20px; margin: 0;">
                        <li><a href="@Url.Action("Index", "Home")" style="color: white; text-decoration: none; padding: 10px 20px; border-radius: 8px; transition: background-color 0.3s;">Home</a></li>
                        <li><a href="@Url.Action("Index", "Booking")" style="color: white; text-decoration: none; padding: 10px 20px; border-radius: 8px; transition: background-color 0.3s;">Bookings</a></li>
                        <li><a href="@Url.Action("Index", "Room")" style="color: white; text-decoration: none; padding: 10px 20px; border-radius: 8px; transition: background-color 0.3s;">Rooms</a></li>
                       

                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserRole")))
                        {
                            <li><a href="@Url.Action("Logout", "Home")" style="color: #ef4444; text-decoration: none; padding: 10px 20px; border-radius: 8px; font-weight: bold; transition: background-color 0.3s;">Logout</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }

    <!-- Main Content -->
    <div style="padding: 20px; background-color: white; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-top: 20px;">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
