@model HotelReservationSystem.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Register</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            width: 100%;
            max-width: 400px;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            font-size: 24px;
            font-weight: bold;
            color: #3b82f6;
            text-align: center;
            margin-bottom: 20px;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 16px;
        }

        .success-message {
            background-color: #d1fae5;
            color: #065f46;
            padding: 12px;
            border-radius: 4px;
            margin-bottom: 16px;
        }

        .form-group {
            margin-bottom: 16px;
        }

        label {
            font-weight: bold;
            color: #4b5563;
        }

        input, select {
            width: 100%;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #d1d5db;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            background-color: #3b82f6;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #2563eb;
            }

        .register-dropdown {
            margin-top: 20px;
            text-align: center;
        }

            .register-dropdown button {
                background-color: #10b981;
            }

        .register-form {
            display: none;
            margin-top: 10px;
        }

            .register-form.active {
                display: block;
            }
    </style>
    <script>
        function toggleRegisterForm() {
            const form = document.querySelector('.register-form');
            form.classList.toggle('active');
        }
    </script>
</head>
<body>
    <div class="container">
        <h2 class="form-title">Login</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="Authenticate" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" required />
            </div>
            <button type="submit">Login</button>
        </form>

        <div class="register-dropdown">
            <button type="button" onclick="toggleRegisterForm()">Register</button>
            <div class="register-form">
                <form asp-action="Register" asp-controller="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" required />
                        <span asp-validation-for="Name" style="color: #e11d48; font-size: 12px;"></span>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" type="email" required />
                        <span asp-validation-for="Email" style="color: #e11d48; font-size: 12px;"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Password" type="password" required />
                        <span asp-validation-for="Password" style="color: #e11d48; font-size: 12px;"></span>
                    </div>
                    <div class="form-group">
                        <label>Role</label>
                        <select asp-for="Role">
                            <option value="Guest">Guest</option>
                            <option value="Staff">Staff</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <button type="submit" style="background-color: #10b981;">Register</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
    