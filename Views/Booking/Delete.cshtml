@model HotelReservationSystem.Models.Booking

<h2 style="font-size: 32px; font-weight: bold; color: #1f2937; margin-bottom: 20px;">Delete Booking</h2>
<p style="font-size: 18px; color: #374151;">Are you sure you want to delete this booking?</p>

<div style="background-color: #fff; padding: 20px; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
    <h4 style="font-size: 18px; color: #1f2937;">User: @Model.User.Name</h4>
    <h4 style="font-size: 18px; color: #1f2937;">Room: @Model.Room.RoomNumber</h4>
    <h4 style="font-size: 18px; color: #1f2937;">Check-In: @Model.CheckInDate.ToShortDateString()</h4>
    <h4 style="font-size: 18px; color: #1f2937;">Check-Out: @Model.CheckOutDate.ToShortDateString()</h4>
</div>

<form asp-action="DeleteConfirmed" method="post" style="display: flex; gap: 20px;">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn" style="background-color: #ef4444; color: white; padding: 12px 20px; border-radius: 8px; border: none; font-weight: bold; cursor: pointer; transition: background-color 0.3s;">Delete</button>
    <a asp-action="Index" class="btn" style="background-color: #e5e7eb; color: #1f2937; padding: 12px 20px; border-radius: 8px; font-weight: bold; text-decoration: none; transition: background-color 0.3s;">Cancel</a>
</form>
